        <Setter Property="SeparatorColor" Value="{StaticResource Gray2}"/>
        <Setter Property="IsSeparatorVisible" Value="True"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
